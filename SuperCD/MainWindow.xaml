<Window x:Class="SuperCD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Super CD"
        WindowStyle="None"
        Height="250" Width="800" MinHeight="250" MaxHeight="600" SizeToContent="Height" ResizeMode="CanMinimize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        >

    <Border Background="#AA002200"
            CornerRadius="24"
            BorderBrush="#55FF00"
            BorderThickness="2"
            Padding="10"
            Effect="{DynamicResource ShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- SearchBox -->
                <RowDefinition Height="*"/>
                <!-- ListBox (fills remaining space) -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                   Text="OmniGate ~Access Anywhere, Instantly~"
                   FontSize="16"
                   Foreground="#66FF66"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,18"
                   FontFamily="Agave Nerd Font"/>

            <!-- Search Box -->
            <Grid Grid.Row="1" Margin="15,0,20,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <WrapPanel x:Name="PromptPanel" Orientation="Horizontal" Width="700" Margin="20,0,20,8">
                    <TextBlock x:Name="CurrentPathBlock"
                       Text=">"
                       FontSize="18"
                       Foreground="#66FF66"
                       VerticalAlignment="Center"
                       FontFamily="Agave Nerd Font"
                       TextWrapping="Wrap"/>
                    <TextBox x:Name="InputBox"
                         FontSize="18"
                         Background="Transparent"
                         Foreground="#CCFFCC"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         FontFamily="Agave Nerd Font"
                         Width="Auto"
                         CaretBrush="Transparent"
                         TextWrapping="Wrap"
                         AcceptsReturn="False"/>
                </WrapPanel>



            </Grid>

            <!-- List Box -->
            <ListBox
                    x:Name="FileListBox"
                    Grid.Row="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#88FF88"
                    FontSize="16"
                    FontFamily="JetBrainsMono Nerd Font"
                    VerticalAlignment="Stretch"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    VirtualizingStackPanel.VirtualizationMode="Standard">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                               TextTrimming="CharacterEllipsis" 
                               TextWrapping="NoWrap"
                               ToolTip="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="4,2"/>
                        <Setter Property="SnapsToDevicePixels" Value="True" />
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            SnapsToDevicePixels="true">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#224422"/>
                                            <Setter Property="Foreground" Value="#CCFFCC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid Background="#268612">
                                        <Track Name="PART_Track" IsDirectionReversed="true">
                                            <Track.Thumb>
                                                <Thumb Background="#25c704"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>
            </ListBox>



        </Grid>
    </Border>
</Window>

